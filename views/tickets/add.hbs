<form action="/tickets" method="POST">
  <fieldset>
    <legend>Report Bug</legend>
    <div class="form-group row">
      <label for="staticTitle" class="col-sm-2 col-form-label">Example: Title</label>
      <div class="col-sm-10">
        <input type="text" readonly="" class="form-control-plaintext" id="staticEmail" value="System crashes when I open application">
      </div>
    </div>
    <div class="form-group">
      <label for="title">Title</label>
      <input type="title" class="form-control" id="title" name="title" aria-describedby="emailHelp" placeholder="Enter title">
      {{!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> --}}
    </div>
    <div class="form-group">
      <label for="tType">Type of bug</label>
      <select class="form-control" id="tType" name="tType">
        <option value="Development">Development</option>
        <option value="Testing">Testing</option>
        <option value="Production">Production</option>
      </select>
    </div>
    <div class="form-group">
      <label for="description">Describe the bug </label>
      <textarea class="form-control" id="description" name="description" rows="3"></textarea>
    </div>
    <div class="form-group">
      <label hidden for="created_by">Created By</label>
      <input hidden type="created_by" id="created_by" name="created_by" class="form-control" value="{{user.name}}"/>
    </div>
    <div class="form-group">
      <label for="assignTo">Assign to developer</label>
      <select class="form-control" id="assignedTo" name="assignedTo">
        <option value="Julian">Julian</option>
        <option value="Jeremiah">Jeremiah</option>
        <option value="Madani">Madani</option>
        <option value="Yassine">Yassine</option>
        <option value="Nate">Nate</option>
      </select>
    </div>
    <div class="form-group">
      <label for="priority">Priority</label>
      <select class="form-control" id="priority" name="priority">
        <option value="Low">Low</option>
        <option value="Medium">Medium</option>
        <option value="High" selected="selected">High</option>
      </select>
    </div>
    <div class="form-group">
      <label for="status">Status</label>
      <select class="form-control" id="status" name="status" disabled="">
        <option value="Open">Open</option>
        <option value="Resolved">Resolved</option>
        <option value="Closed">Close</option>
      </select>
    </div>
    <div class="row">
        <div class="col">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="/dashboard" class="btn">Cancel</a>
        </div>
    </div>
  </fieldset>
</form>